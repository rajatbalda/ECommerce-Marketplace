@model AmazonFreshViewModel
@{
    ViewData["Title"] = "Details Page";
    Layout = "_ShopperLayout";
}
<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-7">
            <div class="tab-content">
                    <div class="row">
                        @if(Model.Product != null)
                        {
                            <div class="col-md-8 mb-4 card-footer p-5">
                            @{
                                    string imgsrc = "/images/" + Model.Product.ProductID + ".jpg"; 
                                }
                                <div class="card text-center h-80 border-0 box-shadow">
                                    <img class="card-img-top" src="@imgsrc"  style="height: 250px;" />
                                    <div class="card-body">
                                        <h5 class="card-title">@Model.Product.Name</h5>
                                        <p class="card-text">@Model.Product.Description</p>
                                        <div class="bg-white px-0">
                                            <div class="btn-group btn-group-sm">
                                                <a class="btn btn-outline-danger" href="#">$ @Model.Product.Price</a>
                                                <a class="btn btn-outline-danger" href="#">@Model.Product.SoldCount Sold</a>
                                            </div>
                                        </div>
                                        <div class="bg-white px-0 m-3">
                                            <div class="btn-group btn-group-lg">
                                                <form asp-action="Add" asp-controller="Cart" method="post">
                                                <button type="submit" class="btn btn-success"
                                                    name="product.ProductID" value="@Model.Product.ProductID">
                                                    Add to Cart
                                                </button>
                                                <a class="btn btn-dark" asp-action="Index" asp-controller="Home">Return to Home Page</a>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
</div>